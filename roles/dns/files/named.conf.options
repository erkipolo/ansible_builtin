options {
  directory "/var/cache/bind";
  forwarders { 8.8.8.8; };
  dnssec-validation no;
  listen-on-v6 { none; };
  version "Go Away 0.0.7";
  notify no;
  empty-zones-enable no;
  auth-nxdomain yes;
  minimal-responses yes;
  recursion yes;
  allow-recursion { 127.0.0.0/8; 192.168.56.0/24; };
  allow-query { 127.0.0.0/8; 192.168.56.0/24; };
  allow-query-cache { 127.0.0.0/8; 192.168.56.0/24; };
  allow-transfer { none; };
};
